@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()


<ul class="nav navbar-nav navbar-right">
    <li>
        <p class="navbar-text">@("Welcome " + User.Identity.GetUserName() + "!")</p>
    </li>
    <li>@Html.ActionLink("Home", "Index", "TwitterHome", routeValues: null, htmlAttributes: new { id = "twitterhomeLink" })</li>
    <li>@Html.ActionLink("Profile", "Edit", "Person", routeValues: new { id = User.Identity.GetUserName() }, htmlAttributes: new { id = "profileLink" })</li>
    <li><a href="javascript:document.getElementById('logoutForm').submit()">Signout</a></li>
</ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Sign Up", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
